<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btCancel"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_margin"
        android:text="@string/lbl_cancel"
        android:textColor="@color/colorRed"
        app:layout_constraintEnd_toStartOf="@id/btAccept"
        app:layout_constraintTop_toTopOf="@id/btAccept"
        app:rippleColor="@color/colorRedLight"
        app:strokeColor="@color/colorRedLight" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btAccept"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default_margin"
        android:text="@string/lbl_accept"
        android:textColor="@color/colorGreen"
        android:layout_marginEnd="@dimen/default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/colorGreenLight"
        app:strokeColor="@color/colorGreenLight" />
</androidx.constraintlayout.widget.ConstraintLayout>
